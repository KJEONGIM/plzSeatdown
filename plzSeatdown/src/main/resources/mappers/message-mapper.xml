<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="messageMapper">
   <resultMap type="Message" id="messageResultSet">
      <id property="messageNo" column="MESSAGE_NO"/>
      <result property="messageSenderNo" column="MESSAGE_SENDER_NO"/>
      <result property="messageReceiverNo" column="MESSAGE_RECEIVER_NO"/>
      <result property="messageContent" column="MESSAGE_CONTENT"/>
      <result property="messageDate" column="MESSAGE_DT"/>
      <result property="messageRead" column="MESSAGE_READ"/>
      <result property="senderNickname" column="SENDER_NICKNM"/>
      <result property="receiverNickname" column="RECEIVER_NICKNM"/>
      <result property="messageRead" column="MESSAGE_READ"/>
      <result property="messageReceiveStatus" column="MESSAGE_RECEIVE_STATUS"/>
      <result property="messageSendStatus" column="MESSAGE_SEND_STATUS"/>
   </resultMap>


   <!-- 받은 쪽지 -->
   <!-- 전체 게시글 수 조회 -->
   <select id="getListCount" parameterType="string" resultType="_int">
     SELECT COUNT(*) FROM V_MESSAGE
        WHERE RECEIVER_NICKNM = #{nickName}
          AND MESSAGE_RECEIVE_STATUS='Y'
     ORDER BY MESSAGE_NO DESC
   </select>   
   
   <!-- 게시글 목록 조회 -->
   <select id="selectList" parameterType="string" resultMap="messageResultSet">
      SELECT *
      FROM V_MESSAGE
      WHERE RECEIVER_NICKNM = #{nickName}
      AND MESSAGE_RECEIVE_STATUS='Y'
      ORDER BY MESSAGE_NO DESC
   </select>
   
   <!-- 다음 번호 조회용 -->
   <select id="selectNextNo" resultType="_int">
      SELECT SEQ_MSGNO.NEXTVAL
      FROM DUAL
   </select>
   
   <!-- 쪽지 DB 저장 -->
   <insert id="insertMessage" parameterType="map">
      INSERT INTO MESSAGE VALUES
      (#{messageNo}, #{messageSenderNo}, #{messageReceiverNo}, #{messageContent}, DEFAULT, DEFAULT, DEFAULT, DEFAULT)
   </insert>
   
   <!-- 보낸 쪽지 -->
   <!-- 보낸 쪽지 수 조회 -->
   <select id="getListCount2" parameterType="string" resultType="_int">
        SELECT COUNT(*) FROM V_MESSAGE
        WHERE SENDER_NICKNM = #{nickName}
        AND MESSAGE_SEND_STATUS='Y'
     ORDER BY MESSAGE_NO DESC
   </select>
   
   <!-- 보낸 쪽지 목록 조회 -->
   <select id="selectList2" parameterType="string" resultMap="messageResultSet">
      SELECT *
      FROM V_MESSAGE
      WHERE SENDER_NICKNM = #{nickName}
      AND MESSAGE_SEND_STATUS='Y'
      ORDER BY MESSAGE_NO DESC
   </select>
   
   <!-- 쪽지 상세보기 -->
   <select id="selectMessage" parameterType="_int" resultMap="messageResultSet">
         SELECT *
         FROM V_MESSAGE
         WHERE MESSAGE_NO=#{no}
   </select>
   
   <!-- 받은 사람 쪽지 삭제 -->
   <update id="deleteMessage" parameterType="_int">
      UPDATE MESSAGE SET MESSAGE_RECEIVE_STATUS='N'
      WHERE MESSAGE_NO=#{no}
   </update>
   
   <!-- 쪽지 알람 개수 -->
   <select id="msgCount" parameterType="_int" resultType="_int">
      SELECT COUNT(*) FROM V_MESSAGE
      WHERE MESSAGE_RECEIVER_NO = #{no}
      AND MESSAGE_READ = 'N'
   </select>
   
   
   <!-- 쪽지 읽음 상태로 변경 -->
      <update id="updateMessage" parameterType="_int">
         UPDATE MESSAGE SET MESSAGE_READ='Y'
         WHERE MESSAGE_NO=#{no}
      </update>
   
      <!-- 보낸 쪽지 상세보기 -->
   <select id="selectSendMessage" parameterType="_int" resultMap="messageResultSet">
         SELECT *
         FROM V_MESSAGE
         WHERE MESSAGE_NO=#{no}
         AND MESSAGE_SEND_STATUS='Y'
   </select>
   
	<!-- 쪽지 보내기 창에 넣을 정보 -->
	<select id="selectReplyForm" parameterType="_int" resultMap="messageResultSet">
		SELECT * 
		FROM V_MESSAGE
		WHERE MESSAGE_NO = #{no}
	</select>
   
   <!-- 쪽지 답장 보내기 -->
   <insert id="insertMessage2" parameterType="map">
      INSERT INTO MESSAGE VALUES
      (#{messageNo}, #{messageReceiverNo}, #{messageSenderNo}, #{messageContent}, DEFAULT, DEFAULT, DEFAULT, DEFAULT)
   </insert>
   
</mapper>