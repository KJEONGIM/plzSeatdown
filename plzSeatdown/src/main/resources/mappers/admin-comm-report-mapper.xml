<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="adminCommReportMapper">
	<resultMap type="AdminCommunityReport" id="adminCommunityReportResultSet">
		<id property="commReportNo" column="COMM_REPORT_NO"/>
		<result property="commReportContent" column="COMM_REPORT_CONTENT"/>
		<result property="commNo" column="COMM_NO"/>
		<result property="memberSuspector" column="MEMBER_SUSPECTOR"/>
		<result property="memberReporter" column="MEMBER_REPORTER"/>
		<result property="reportCategoryCode" column="REPORT_CATEGORY_CD"/>
		<result property="reportCategoryName" column="REPORT_CATEGORY_NM"/>
		<result property="reportStatus" column="REPORT_STATUS"/>
		<result property="suspectorId" column="SUSPECTOR_ID"/>
		<result property="reporterId" column="REPORTER_ID"/>
	</resultMap>
	<resultMap type="Member" id="memberResultSet">
		<id property="memberNo" column="MEMBER_NO" />
		<result property="memberId" column="MEMBER_ID" />
		<result property="memberPwd" column="MEMBER_PWD" />
		<result property="memberName" column="MEMBER_NM" />
		<result property="memberNickname" column="MEMBER_NICKNM" />
		<result property="memberEmail" column="MEMBER_EMAIL" />
		<result property="memberEmailCheck" column="MEMBER_EMAIL_CHECK" />
		<result property="memberPhone" column="MEMBER_PHONE" />
		<result property="memberEnrollDate" column="MEMBER_ENROLL_DT" />
		<result property="memberReportCount" column="MEMBER_REPORT_CNT" />
		<result property="memberStatus" column="MEMBER_STATUS" />
		<result property="memberGrade" column="MEMBER_GRADE" />
	</resultMap>

	<!-- 전체 게시글 수 조회 -->
	<select id="getListCount" parameterType="map" resultType="_int">
		SELECT COUNT(*) FROM A_COMM_REPORT
		<where>
			<if test="searchKey != null">
				<bind name="sv" value="'%' + _parameter.searchValue + '%'"/>
				<choose>
					<when test="searchKey == 'reportNo'">
						AND COMM_REPORT_NO LIKE #{sv}
					</when>					
					<when test="searchKey == 'content'">
						AND COMM_REPORT_CONTENT LIKE #{sv}
					</when>
				</choose>
			</if>
		</where>
		ORDER BY COMM_REPORT_NO DESC
	</select>
	
	<!-- 게시글 목록 조회 -->
	<select id="selectList" parameterType="map" resultMap="adminCommunityReportResultSet">
		SELECT COMM_REPORT_NO, COMM_REPORT_CONTENT, COMM_NO, MEMBER_SUSPECTOR, MEMBER_REPORTER, 
			   REPORT_CATEGORY_CD, REPORT_STATUS, REPORT_CATEGORY_NM, SUSPECTOR_ID, REPORTER_ID
		FROM A_COMM_REPORT
		<where>
			<if test="searchKey != null">
				<bind name="sv" value="'%' + _parameter.searchValue + '%'"/>
				<choose>
					<when test="searchKey == 'reportNo'">
						AND COMM_REPORT_NO LIKE #{sv}
					</when>					
					<when test="searchKey == 'content'">
						AND COMM_REPORT_CONTENT LIKE #{sv}
					</when>
				</choose>
			</if>		
		</where>
		ORDER BY COMM_REPORT_NO DESC
	</select>
	
	<!-- 신고횟수 업데이트  -->
	<update id="updateRpCnt" parameterType="_int">
		UPDATE MEMBER SET MEMBER_REPORT_CNT = MEMBER_REPORT_CNT + 1
		WHERE MEMBER_NO = #{no}
		AND REPORT_STATUS = 'N'
	</update>
	
	<!-- 신고글 처리상태 변경 -->
	<update id="updateStatus" parameterType="_int">
		UPDATE COMMUNITY_REPORT SET REPORT_STATUS = 'Y'
		WHERE COMM_REPORT_NO = #{reportNo}
		
	</update>
	
</mapper>